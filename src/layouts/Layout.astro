---
// src/layouts/MainLayout.astro
import "../styles/global.css";
import Footer from "../components/Footer.astro"; 
---

<!doctype html>
<html lang="es" class="scroll-smooth" x-data="{ mobileMenuOpen: false }">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Arquitectura & Construcción | Diseños Innovadores</title>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>

<body class="bg-gray-50 font-sans text-gray-800 antialiased">
    
    <!-- Contenido principal -->
    <main class="min-h-[calc(100vh-160px)]">
        <slot />
    </main>
    
    <!-- Footer -->
    <Footer
        companyName="ARINCO"
        year={new Date().getFullYear()}
    />

    <!-- Alpine.js para interactividad -->
    <script defer src="src/assets/js/alpine/navbar.js"></script>
    <script defer src="//unpkg.com/alpinejs" crossorigin="anonymous"></script>

	<script src="https://kit.fontawesome.com/0102df25ac.js" crossorigin="anonymous"></script>
</body>
</html>

<style is:global>
    html, body {
        margin: 0;
        width: 100%;
        height: 100%;
        scroll-behavior: smooth;
    }
    
    h1, h2, h3, h4 {
        font-family: 'Playfair Display', serif;
    }
</style>