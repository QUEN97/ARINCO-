---
import Layout from '../../../layouts/Layout.astro';
import BlogCard from '../../../components/BlogCard.astro';
import TagFilter from '../../../components/TagFilter.astro';
import Pagination from '../../../components/Pagination.astro';
import { getCollection } from 'astro:content';

const postsPerPage = 6;

// Primero: getStaticPaths debe ser independiente
export async function getStaticPaths() {
  const allPosts = await getCollection('blog');
  const allTags = [...new Set(allPosts.flatMap((post: any) => post.data.tags || []))];
  
  return allTags.map((tag) => ({
    params: { tag },
    props: {
      tag,      // Añadimos la etiqueta actual como prop
      allPosts, // Pasamos los posts como prop
      allTags   // También pasamos las etiquetas
    }
  }));
}

// Luego recibimos los props
const { tag, allPosts, allTags } = Astro.props;
const filteredPosts = allPosts
  .filter((post: any) => post.data.tags?.includes(tag))
  .sort((a: any, b: any) => b.data.date.getTime() - a.data.date.getTime());

const currentPage = 1;
const posts = filteredPosts.slice(0, postsPerPage);
---

<Layout>
  <section class="py-16 bg-gray-50"> <!-- Fondo gris claro -->
    <div class="container mx-auto px-4">
      <!-- Encabezado con estilo corporativo -->
      <div class="text-center mb-12">
        <span class="text-primary font-semibold tracking-widest uppercase">Filtrado por</span>
        <h1 class="text-4xl font-bold text-dark mt-2 mb-4">{tag}</h1>
        <div class="w-20 h-1 bg-primary mx-auto"></div> <!-- Línea decorativa -->
      </div>

      <TagFilter tags={allTags} activeTag={tag} />

      {posts.length > 0 ? (
        <>
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
            {posts.map((post: any) => (
              <BlogCard blog={post} />
            ))}
          </div>

          <Pagination 
            currentPage={currentPage} 
            totalPages={Math.ceil(filteredPosts.length / postsPerPage)} 
            basePath={`/blog/tag/${tag}`}
          />
        </>
      ) : (
        <div class="text-center bg-white p-8 rounded-lg shadow-sm max-w-md mx-auto"> <!-- Tarjeta para mensaje vacío -->
          <p class="text-gray-600 mb-4">No encontramos artículos con esta etiqueta.</p>
          <a href="/blog" class="text-primary font-medium hover:underline">Volver al blog</a>
        </div>
      )}
    </div>
  </section>
</Layout>